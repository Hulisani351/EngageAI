{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "api/lead.js", "use": "@vercel/node" }
  ],
  "env": {
    "FORMSPREE_ENDPOINT": "https://formspree.io/f/xqalwjpj",
    "FORMSPREE_CUSTOM_KEY": ""
  },
  "rewrites": [
    { "source": "/api/lead", "destination": "/api/lead.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "framework": "create-react-app"
}

